<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo blanco limpio -->
    <solid android:color="@android:color/white" />

    <!-- Bordes redondeados -->
    <corners android:radius="12dp" />

    <!-- Borde sutil gris claro -->
    <stroke
        android:width="1dp"
        android:color="#D0D0D0" />

    <!-- Sombra muy suave simulada (gris semitransparente) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

    <!-- Ligero sombreado para efecto de profundidad -->
    <gradient
        android:startColor="#FFFFFFFF"
        android:endColor="#FFF5F5F5"
        android:angle="270" />
</shape>

<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ðŸ”¹ Estado enfocado (campo activo) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurfaceContainerHigh" />
            <stroke
                android:width="2dp"
                android:color="?attr/colorPrimary" />
            <corners android:radius="12dp" />
            <padding
                android:left="14dp"
                android:top="12dp"
                android:right="14dp"
                android:bottom="12dp" />
        </shape>
    </item>

    <!-- ðŸ”¹ Estado deshabilitado -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurfaceContainerLow" />
            <stroke
                android:width="1dp"
                android:color="?attr/colorOutlineVariant" />
            <corners android:radius="12dp" />
            <padding
                android:left="14dp"
                android:top="12dp"
                android:right="14dp"
                android:bottom="12dp" />
        </shape>
    </item>

    <!-- ðŸ”¹ Estado normal (sin foco) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurfaceContainer" />
            <stroke
                android:width="1.2dp"
                android:color="?attr/colorOutline" />
            <corners android:radius="12dp" />
            <padding
                android:left="14dp"
                android:top="12dp"
                android:right="14dp"
                android:bottom="12dp" />
        </shape>
    </item>

</selector>

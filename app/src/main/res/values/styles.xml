<resources>

    <!-- ðŸŽ¨ Botones generales -->
    <style name="Widget.Centro.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- ðŸŸ¢ EditText personalizado -->
    <style name="Widget.Centro.EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:background">@drawable/bg_field</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/gray_500</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- ðŸ”¤ TextView tÃ­tulos -->
    <style name="Widget.Centro.TitleText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primary_green_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- ðŸª¶ SubtÃ­tulo -->
    <style name="Widget.Centro.SubtitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- ðŸ“… Estilos para el calendario -->
    <style name="CalendarDateText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CalendarWeekdayText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>

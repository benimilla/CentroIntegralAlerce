<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ðŸ”¹ Encabezado del calendario -->
    <style name="DayHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_green_700</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- ðŸ”¹ Textos del calendario -->
    <style name="CalendarWeekdayText">
        <item name="android:textColor">@color/primary_green_700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarDateText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- ðŸ”¹ Campos de texto -->
    <style name="RoundedInput">
        <item name="android:background">@drawable/edittext_rounded_bg</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- ðŸ”¹ Botones -->
    <style name="PrimaryButton">
        <item name="android:backgroundTint">@color/button_primary_bg</item>
        <item name="android:textColor">@color/button_primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:backgroundTint">@color/button_secondary_bg</item>
        <item name="android:textColor">@color/button_secondary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- ðŸ”¹ Encabezados -->
    <style name="SectionTitle">
        <item name="android:textColor">@color/primary_green_700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

</resources>

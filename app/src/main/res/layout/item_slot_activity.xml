<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="12dp"
    android:background="@android:color/transparent"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/tvHour" android:textStyle="bold" android:textSize="16sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvTitle" android:textSize="14sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvPlace" android:textSize="12sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>

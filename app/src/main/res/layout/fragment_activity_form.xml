<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ðŸ”¹ Nombre -->
        <EditText
            android:id="@+id/etNombre"
            android:hint="Nombre de la actividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ðŸ”¹ Tipo -->
        <TextView
            android:text="Tipo de actividad"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:padding="4dp" />

        <!-- ðŸ”¹ Periodicidad -->
        <TextView
            android:text="Periodicidad"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spPeriodicidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:padding="4dp" />

        <!-- ðŸ”¹ Cupo -->
        <EditText
            android:id="@+id/etCupo"
            android:hint="Cupo"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ðŸ”¹ Oferente -->
        <TextView
            android:text="Oferente"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spOferente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:padding="4dp" />

        <!-- ðŸ”¹ Socio Comunitario -->
        <TextView
            android:text="Socio comunitario (opcional)"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spSocioComunitario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:padding="4dp" />

        <!-- ðŸ”¹ Beneficiarios -->
        <EditText
            android:id="@+id/etBeneficiarios"
            android:hint="Beneficiarios (separar con comas)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ðŸ”¹ DÃ­as aviso previo -->
        <EditText
            android:id="@+id/etDiasAvisoPrevio"
            android:hint="DÃ­as de aviso previo"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ðŸ”¹ Lugar -->
        <TextView
            android:text="Lugar"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spLugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:padding="4dp" />

        <!-- ðŸ”¹ DuraciÃ³n -->
        <EditText
            android:id="@+id/etDuracion"
            android:hint="DuraciÃ³n (minutos)"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ðŸ”¹ Botones -->
        <Button
            android:id="@+id/btnAgregarCita"
            android:text="Agregar Cita"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnGuardar"
            android:text="Guardar Actividad"
            android:backgroundTint="@color/primary_green"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/linearContainer"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 🔹 Nombre -->
        <EditText
            android:id="@+id/etNombre"
            android:hint="Nombre de la actividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 🔹 Tipo -->
        <TextView
            android:text="Tipo de actividad"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:padding="4dp" />

        <!-- 🔹 Periodicidad -->
        <TextView
            android:text="Periodicidad"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spPeriodicidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:padding="4dp" />

        <!-- 🔹 Cupo -->
        <EditText
            android:id="@+id/etCupo"
            android:hint="Cupo"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 🔹 Oferente -->
        <TextView
            android:text="Oferente"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spOferente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:padding="4dp" />

        <!-- 🔹 Socio Comunitario -->
        <TextView
            android:text="Socio comunitario (opcional)"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spSocioComunitario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:padding="4dp" />

        <!-- 🔹 Beneficiarios -->
        <EditText
            android:id="@+id/etBeneficiarios"
            android:hint="Beneficiarios (separar con comas)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 🔹 Días aviso previo -->
        <EditText
            android:id="@+id/etDiasAvisoPrevio"
            android:hint="Días de aviso previo"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 🔹 Lugar -->
        <TextView
            android:text="Lugar"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spLugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:padding="4dp" />

        <!-- 🔹 Duración -->
        <EditText
            android:id="@+id/etDuracion"
            android:hint="Duración (minutos)"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 🔹 Botón agregar cita -->
        <Button
            android:id="@+id/btnAgregarCita"
            android:text="Agregar Cita"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 🔹 Espacio donde se insertará dinámicamente el resumen de citas -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <!-- 🔹 Botón guardar -->
        <Button
            android:id="@+id/btnGuardar"
            android:text="Guardar Actividad"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_green"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>

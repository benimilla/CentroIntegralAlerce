<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light"
    android:padding="16dp"
    tools:context=".activities.ActivityFormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--  Encabezado -->
        <TextView
            android:id="@+id/tvTituloActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nueva Actividad"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/primary_green_dark"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:layout_marginBottom="16dp" />

        <!--  Contenedor general -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_field"
            android:padding="16dp">

            <!-- Nombre -->
            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre de la actividad"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:background="@drawable/bg_spinner"
                android:padding="10dp" />

            <!-- Tipo -->
            <Spinner
                android:id="@+id/spTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_spinner"
                android:popupBackground="@color/bg_card" />

            <!-- Periodicidad -->
            <Spinner
                android:id="@+id/spPeriodicidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_spinner"
                android:popupBackground="@color/bg_card" />

            <!--  NUEVO: Layout de frecuencia -->
            <LinearLayout
                android:id="@+id/layoutFrecuencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frecuencia"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spFrecuencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:popupBackground="@color/bg_card"
                    android:background="@drawable/bg_spinner" />
            </LinearLayout>

            <!-- Cupo -->
            <EditText
                android:id="@+id/etCupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cupo m谩ximo"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:background="@drawable/bg_spinner"
                android:padding="10dp" />

            <!-- Oferente -->
            <Spinner
                android:id="@+id/spOferente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_spinner"
                android:popupBackground="@color/bg_card" />

            <!-- Socio Comunitario -->
            <Spinner
                android:id="@+id/spSocioComunitario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_spinner"
                android:popupBackground="@color/bg_card" />

            <!-- Beneficiarios -->
            <EditText
                android:id="@+id/etBeneficiarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Beneficiarios (separados por comas)"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_spinner"
                android:padding="10dp" />

            <!--  NUEVO: D铆as aviso previo -->
            <EditText
                android:id="@+id/etDiasAvisoPrevio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="D铆as de aviso previo"
                android:inputType="number"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_spinner"
                android:padding="10dp" />

            <!-- Lugar -->
            <Spinner
                android:id="@+id/spLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_spinner"
                android:popupBackground="@color/bg_card" />

            <!-- Duraci贸n -->
            <EditText
                android:id="@+id/etDuracion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Duraci贸n m谩xima (minutos)"
                android:inputType="number"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_spinner"
                android:padding="10dp" />

            <!-- Estado -->
            <Spinner
                android:id="@+id/spEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_spinner"
                android:popupBackground="@color/bg_card" />

            <!-- Motivo cancelaci贸n -->
            <EditText
                android:id="@+id/etMotivoCancelacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Motivo de cancelaci贸n"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_spinner"
                android:padding="10dp"
                android:visibility="gone" />
        </LinearLayout>

        <!--  Citas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_field"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvResumenCitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No hay citas agregadas a煤n"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/btnAgregarCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Agregar Cita"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_green" />
        </LinearLayout>

        <!-- Bot贸n Guardar -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Actividad"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_500"
            android:layout_marginTop="20dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>

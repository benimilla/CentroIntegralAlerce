<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light"
    android:padding="16dp"
    tools:context=".activities.ActivityFormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 游릭 Encabezado -->
        <TextView
            android:id="@+id/tvTituloActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nueva Actividad"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/primary_green_dark"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:layout_marginBottom="16dp" />

        <!-- 游댳 Contenedor general -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_field"
            android:padding="16dp">

            <!-- 游댲 Mini t칤tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de la Actividad"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="4dp" />

            <!-- Nombre -->
            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej: Taller de Memoria"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:background="@drawable/bg_spinner"
                android:padding="10dp" />

            <!-- 游댲 Mini t칤tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Actividad"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

            <!-- Tipo -->
            <Spinner
                android:id="@+id/spTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_spinner"
                android:popupBackground="@color/bg_card" />

            <!-- 游댲 Mini t칤tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Periodicidad"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

            <!-- Periodicidad -->
            <Spinner
                android:id="@+id/spPeriodicidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_spinner"
                android:popupBackground="@color/bg_card" />

            <!-- 游댲 NUEVO: Layout de frecuencia -->
            <LinearLayout
                android:id="@+id/layoutFrecuencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frecuencia espec칤fica"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spFrecuencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:popupBackground="@color/bg_card"
                    android:background="@drawable/bg_spinner" />
            </LinearLayout>

            <!-- 游댲 Mini t칤tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cupo M치ximo"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

            <!-- Cupo -->
            <EditText
                android:id="@+id/etCupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej: 25 personas"
                android:inputType="number"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:background="@drawable/bg_spinner"
                android:padding="10dp" />

            <!-- 游댲 Mini t칤tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oferente"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

            <!-- Oferente -->
            <Spinner
                android:id="@+id/spOferente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_spinner"
                android:popupBackground="@color/bg_card" />

            <!-- 游댲 Mini t칤tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Socio Comunitario"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

            <!-- Socio Comunitario -->
            <Spinner
                android:id="@+id/spSocioComunitario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_spinner"
                android:popupBackground="@color/bg_card" />

            <!-- 游댲 Mini t칤tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beneficiarios"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

            <!-- Beneficiarios -->
            <EditText
                android:id="@+id/etBeneficiarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej: Adultos mayores, cuidadores"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:background="@drawable/bg_spinner"
                android:padding="10dp" />

            <!-- 游댲 Mini t칤tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D칤as de Aviso Previo"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

            <!-- Aviso previo -->
            <EditText
                android:id="@+id/etDiasAvisoPrevio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej: 3 d칤as"
                android:inputType="number"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:background="@drawable/bg_spinner"
                android:padding="10dp" />

            <!-- 游댲 Mini t칤tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lugar"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

            <!-- Lugar -->
            <Spinner
                android:id="@+id/spLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_spinner"
                android:popupBackground="@color/bg_card" />

            <!-- 游댲 Mini t칤tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duraci칩n M치xima"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

            <!-- Duraci칩n -->
            <EditText
                android:id="@+id/etDuracion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej: 60 minutos"
                android:inputType="number"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:background="@drawable/bg_spinner"
                android:padding="10dp" />

            <!-- 游댲 Mini t칤tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

            <!-- Estado -->
            <Spinner
                android:id="@+id/spEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_spinner"
                android:popupBackground="@color/bg_card" />

            <!-- 游댲 Mini t칤tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motivo de Cancelaci칩n"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:visibility="gone" />

            <!-- Motivo cancelaci칩n -->
            <EditText
                android:id="@+id/etMotivoCancelacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Indique el motivo"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:background="@drawable/bg_spinner"
                android:padding="10dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- 游댳 Citas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_field"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvResumenCitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No hay citas agregadas a칰n"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/btnAgregarCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Agregar Cita"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_green" />
        </LinearLayout>

        <!-- Bot칩n Guardar -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Actividad"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_500"
            android:layout_marginTop="20dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>
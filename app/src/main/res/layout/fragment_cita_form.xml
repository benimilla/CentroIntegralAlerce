<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light"
    android:padding="20dp"
    tools:context=".activities.CitaFormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:showDividers="middle"
        android:dividerPadding="12dp">

        <!-- 🔹 Título principal -->
        <TextView
            android:id="@+id/tvTituloCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nueva Cita"
            android:textColor="@color/primary_green_dark"
            android:textStyle="bold"
            android:textSize="22sp"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- 🔸 SECCIÓN: Selección de Actividad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_field"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar Actividad"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spActividad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:popupBackground="@color/white"
                android:background="@drawable/bg_spinner"
                android:padding="8dp"
                android:layout_marginBottom="12dp" />

            <!-- Información visual de la actividad -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_300"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lugar: -"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:paddingVertical="2dp" />

            <TextView
                android:id="@+id/tvAvisoPrevio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aviso previo: -"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:paddingVertical="2dp" />

            <TextView
                android:id="@+id/tvDuracionMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duración máxima: -"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:paddingVertical="2dp" />
        </LinearLayout>

        <!-- 🔸 SECCIÓN: Datos de la cita -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_field"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalles de la Cita"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Fecha -->
            <EditText
                android:id="@+id/etFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha (dd/MM/yyyy)"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/gray_500"
                android:background="@drawable/bg_field_inner"
                android:padding="10dp"
                android:layout_marginBottom="10dp" />

            <!-- Hora inicio -->
            <EditText
                android:id="@+id/etHoraInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hora de inicio (HH:mm)"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/gray_500"
                android:background="@drawable/bg_field_inner"
                android:padding="10dp"
                android:layout_marginBottom="10dp" />

            <!-- Hora fin -->
            <EditText
                android:id="@+id/etHoraFin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hora de fin (HH:mm)"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/gray_500"
                android:background="@drawable/bg_field_inner"
                android:padding="10dp"
                android:layout_marginBottom="10dp" />

            <!-- Observaciones -->
            <EditText
                android:id="@+id/etObservaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Observaciones (opcional)"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:gravity="top"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/gray_500"
                android:background="@drawable/bg_field_inner"
                android:padding="10dp" />
        </LinearLayout>

        <!-- 🔹 Botón guardar -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Cita"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary_green"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- 🔹 Progress bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminate="true"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
